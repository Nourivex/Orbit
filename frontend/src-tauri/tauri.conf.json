{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ORBIT Luna",
  "version": "0.2.0",
  "identifier": "com.orbit.luna",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ORBIT Luna",
        "width": 400,
        "height": 500,
        "minWidth": 300,
        "minHeight": 400,
        "resizable": false,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "visible": true,
        "focus": false,
        "center": false,
        "x": null,
        "y": null
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/icon.ico",
      "tooltip": "ORBIT Luna - AI Desktop Companion"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
